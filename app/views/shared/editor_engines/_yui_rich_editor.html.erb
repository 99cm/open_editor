<script type="text/javascript">
    $(function() {
        (function() {
            var myConfig = { dompath: true };
            var ids = [<%= ids.map{|id| "'#{id}'"}.join(', ') %>]
            $.each(ids, function(index, id) {
                if ($('#' + id)) {
                    var myEditor = new YAHOO.widget.SimpleEditor(id, myConfig);
                    myEditor.render();
                }
            });
        })();
    });
</script>
